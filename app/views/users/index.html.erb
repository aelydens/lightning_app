<hr>

<% if current_user %>
Welcome, <%= @user.name %>!
<hr>

<div class = "button">
  <%= link_to "Sign up for a lightning talk", user_path(current_user), class: "btn btn-primary" %>
</div>

<%= flash[:notice] %>

<div class="panel panel-default">
  <div class="panel-heading">Upcoming Lightning Talks</div>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Topic</th>
        <th colspan="2">Completed</th>
      </tr>
    </thead>
    <% @user_upcoming_talks.each do |talk| %>
      <tr>
        <td><%= talk.user.name %></td>
        <td><%= talk.date %></td>
        <td><%= talk.topics %></td>
        <td><%= talk.talk_completed %></td>
        <% if @user.admin %>
        <td><%= link_to "Update", edit_user_talk_path(@user, talk) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Completed Talks</div>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Topic</th>
        <th colspan= "2">Completed</th>
      </tr>
    </thead>
    <% @user_completed_talks.each do |talk| %>
      <tr>
        <td><%= talk.user.name %></td>
        <td><%= talk.date %></td>
        <td><%= talk.topics %></td>
        <td><%= talk.completed %></td>
        <% if @user.admin %>
        <td><%= link_to "Update", edit_user_talk_path(@user, talk) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

<% end %>
