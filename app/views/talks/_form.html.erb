<%= form_for [@user, @talk], html: {class: "form-horizontal"} do |f| %>
  <div class: "form-group" >
    <div class: "alert alert-danger">
      <% if @talk.errors.any? %>
        <% @talk.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class= "form-group">
    <%= f.label :topics, "Topic", class: "col-md-2 control-label"  %>
    <div class= "col-md-4">
      <%= f.text_field :topics, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :date, class: "col-md-2 control-label" %>
    <div class = "col-md-4">
      <%= f.date_field :date, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-primary" %>
  
      <%= link_to "cancel", users_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
